<!DOCTYPE html>
<html lang="en">
{{template "globalhead" "Forum"}}
{{template "globals" ""}}

<style>
    * {
        cursor: default;
    }

    #navbar {
        --background: #ff2020;
        --text-color: #ffffff;
        --text-hover-color: #cccccc;
    }

    #navbar {
        background-color: var(--background);
        padding: 20px;
        min-height: 32px;
    }

    #navbar .element {
        display: inline-block;
        vertical-align: middle;
    }

    #navbar .element #sidenav-button {
        cursor: pointer;
        display: inline-block;
        margin-right: 20px;
    }

    #navbar .element #sidenav-button * {
        width: 20px;
        height: 3px;
        background-color: var(--text-color);
        margin: 4px 0;
        transition: transform 0.5s, opacity 0.5s;
        cursor: inherit;
    }

    #navbar .element #sidenav-button:hover * {
        background-color: var(--text-hover-color);
    }

    #navbar .element .text {
        font-size: x-large;
        margin-right: 20px;
        color: var(--text-color);
        text-decoration: none;
        cursor: pointer;
        display: inline-block;
    }

    #navbar #nav .text {
        float: right;
    }

    #navbar #account {
        float: right;
    }

    .change #bar1 {
        transform: translate(0px, 7px) rotate(-45deg);
    }

    .change #bar2 {
        opacity: 0;
    }

    .change #bar3 {
        transform: translate(0px, -7px) rotate(45deg);
    }

    #navbar .element div.text:hover {
        color: var(--text-hover-color);
    }

    body {
        background-color: #ffffff;
    }

    #sidenav {
        z-index: 1;
        transition: 0.5s;
        background-color: #222222;
        opacity: 80%;
        height: 100%;
        position: fixed;
    }

    #tops {

    }
</style>

<script>
    function toggleSideNav() {
        document.getElementById("sidenav").style.width = (document.getElementById("sidenav").style.width === "0px") ? "250px" : "0";
        document.getElementById("sidenav-button").classList.toggle("change");
    }
</script>

<div id="navbar">
    <div id="nav" class="element">
        <div id="sidenav-button" onclick="toggleSideNav();">
            <div id="bar1"></div>
            <div id="bar2"></div>
            <div id="bar3"></div>
        </div>
        <div id="game-nav" class="text" onclick="window.location.href='/webgame/'">Game</div>
        <div id="forum-nav" class="text" onclick="window.location.href='/forum/'">Forum</div>
        <div id="home-nav" class="text" onclick="window.location.href='/home/'">Home</div>
    </div>
    <div id="account" class="element">
        <div id="account-nav" class="text" onclick="window.location.href='/login/'">Login</div>
    </div>
</div>

<div id="sidenav" style="width: 0;">

</div>

<style>
    #tops {
        padding: 10px;
    }
</style>

<style>
    .dropbtn {
        background-color: #3498DB;
        color: white;
        padding: 16px;
        font-size: 16px;
        border: none;
        cursor: pointer;
    }

    .dropbtn:hover, .dropbtn:focus {
        background-color: #2980B9;
    }

    .time {
        position: relative;
        display: inline-block;
    }

    .numpage {
        position: relative;
        display: inline-block;
    }

    .dropdown {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 160px;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        z-index: 1;
    }

    .dropdown * {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
    }

    .dropdown *:hover {
        background-color: #dddddd
    }

    .show {
        display:block;
    }
</style>

<script>
    var time = 0;
    var num = 20;

    function update() {
        $.ajax({
            url: '/forum/data/?time='+time+'&num='+num+'&page=0',
            type: 'GET',
            success: function (result) {
                console.log(result);
                var forumData = JSON.parse(result);
                console.log(forumData);
                for(forum )
                $('#tops')[0].innerHTML = "<div class='widget'>" +
                    "<div class='posterlink' onclick='window.location.href=\'/forum/user/POSTER\''>POSTER</div>" +
                    "<div class='posttime'>POSTTIME</div><br>" +
                    "<div class='postscore'>SCORE</div>" +
                    "<div class='posttitle'>TITLE</div>" +
                    "</div>";
            }
        });
    }
</script>

<script>
    window.onload = function(event) {
        update();
    }

    window.onclick = function(event) {
        if(!event.target.matches('.dropbtn')) {
            let menus = $('.dropdown');
            for(let i = 0; i < menus.length; i++) {
                menus[i].classList.remove('show');
            }
        } else {
            let menus = $('.dropdown');
            for(let i = 0; i < menus.length; i++) {
                if(menus[i].parentNode !== event.target.parentNode) {
                    menus[i].classList.remove('show');
                }
            }
        }
    }
</script>

{{template "threadwidgetcss"}}

<div id="options">
    <div class="time">
        <div class="dropbtn" onclick="$('.dropdown')[0].classList.toggle('show')">Time</div>
        <div class="dropdown">
            <div class="time-sel" onclick="time=0;">Day</div>
            <div class="time-sel" onclick="time=1;">Week</div>
            <div class="time-sel" onclick="time=2;">Month</div>
            <div class="time-sel" onclick="time=3;">Year</div>
            <div class="time-sel" onclick="time=4;">Ever</div>
        </div>
    </div>
    <div class="numpage">
        <div class="dropbtn" onclick="$('.dropdown')[1].classList.toggle('show')"># Per Page</div>
        <div class="dropdown">
            <div class="num-sel" onclick="num=10;">10</div>
            <div class="num-sel" onclick="num=20;">20</div>
            <div class="num-sel" onclick="num=30;">30</div>
            <div class="num-sel" onclick="num=40;">40</div>
            <div class="num-sel" onclick="num=50;">50</div>
        </div>
    </div>
</div>

<div id="tops">
    {{if .Top}}
        {{range $t := .Top}}
            {{template "threadwidget" $t}}
        {{end}}
    {{else}}
        <h1>its quiet here</h1>
    {{end}}
</div>

</html>